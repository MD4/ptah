{
  "name": "ptah-app",
  "private": true,
  "scripts": {
    "start": "cd apps/app && pnpm start",
    "start:ui": "cd apps/ui-admin && pnpm start",
    "build": "turbo build --force",
    "clean": "turbo clean && rm -Rf .turbo **/*/.turbo",
    "dev": "turbo dev --cache=local:r,remote:r  --continue --concurrency 20",
    "format": "biome format",
    "format:fix": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "allcheck": "pnpm format && pnpm check && pnpm typecheck",
    "publish-packages": "pnpm clean && pnpm allcheck && changeset && changeset version && changeset publish && git push && git push --tags"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "turbo": "^2.7.4"
  },
  "packageManager": "pnpm@9.15.4"
}
