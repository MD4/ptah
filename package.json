{
  "name": "ptah",
  "private": true,
  "scripts": {
    "start": "cd apps/app && pnpm start",
    "start:ui": "cd apps/ui-admin && pnpm start",
    "build": "turbo build --force",
    "clean": "turbo clean && rm -Rf .turbo",
    "dev": "turbo dev --cache=local:r,remote:r  --continue --concurrency 20",
    "format": "biome format",
    "format:fix": "biome format --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "allcheck": "pnpm format && pnpm check && pnpm typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@9.15.4"
}
