{
  "name": "@ptah/lib-shared",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup --onSuccess \"tsc --allowSyntheticDefaultImports --emitDeclarationOnly --declaration --declarationMap src/index.ts --outDir dist\"",
    "clean": "rm -rf dist",
    "dev": "tsup --dts --watch --onSuccess \"tsc --allowSyntheticDefaultImports --emitDeclarationOnly --declaration --declarationMap src/index.ts --outDir dist\"",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "devDependencies": {
    "@ptah/config-jest": "workspace:*",
    "@ptah/config-ts": "workspace:*",
    "@types/node": "^24.5.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@kalm/ipc": "^7.0.0",
    "@ptah/lib-domains": "workspace:^",
    "@ptah/lib-logger": "workspace:*",
    "@ptah/lib-models": "workspace:*",
    "kalm": "^7.0.0",
    "zod": "^4.1.11"
  }
}
