{
  "name": "@ptah-app/lib-domains",
  "version": "0.2.1",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup --onSuccess \"tsc --allowSyntheticDefaultImports --emitDeclarationOnly --declaration --declarationMap src/index.ts --outDir dist\"",
    "clean": "rm -rf dist",
    "dev": "tsup --dts --watch --onSuccess \"tsc --allowSyntheticDefaultImports --emitDeclarationOnly --declaration --declarationMap src/index.ts --outDir dist\"",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "jest": {
    "preset": "jest-presets/jest/node"
  },
  "devDependencies": {
    "@ptah-app/config-jest": "workspace:*",
    "@ptah-app/config-ts": "workspace:*",
    "@types/node": "^25.2.0",
    "@types/uuid": "^11.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ptah-app/lib-logger": "workspace:*",
    "@ptah-app/lib-models": "workspace:*",
    "@ptah-app/lib-utils": "workspace:*",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  }
}
