{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "SERVICE_BUS_NAME",
    "SERVICE_BUS_PORT",
    "SERVICE_API_NAME",
    "SERVICE_API_PORT",
    "SERVICE_GATEWAY_WS_NAME",
    "SERVICE_GATEWAY_WS_PORT",
    "SERVICE_MAIN_NAME",
    "SERVICE_MIDI_NAME",
    "VITE_UI_ADMIN_NAME"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}
